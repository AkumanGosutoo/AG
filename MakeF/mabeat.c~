int	my_putchar(char c)
{
  write(1,&c , 1);
}

int	my_putstr(char *str)
{
  int	i;

  i = 0;
  while (str[i] != '\0')
    {
      my_putchar(str[i]);
      i = i + 1;
    }
}

int	main()
{
  char	str[] = "hello\n";
  char  str2[] = "hello \n";

  my_putstr(str);
  my_putstr(str2);
}
